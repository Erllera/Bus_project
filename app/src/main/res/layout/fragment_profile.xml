<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_app"
    tools:context=".navigate.ProfileFragment">


    <ImageView
        android:id="@+id/backColor"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="#5CC09F"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/userImg"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="@dimen/norm_dp"
        android:src="@drawable/ic_person"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/norm_dp"
        android:fontFamily="@font/namu_pro"
        android:text="Имя пользователя"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@id/view1"
        app:layout_constraintTop_toBottomOf="@id/backColor" />

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="@dimen/min_dp"
        android:background="@color/reWhite"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv1" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_marginStart="@dimen/min_dp"
        android:src="@drawable/ic_person"
        app:layout_constraintBottom_toBottomOf="@id/view1"
        app:layout_constraintStart_toStartOf="@id/view1"
        app:layout_constraintTop_toTopOf="@id/view1" />

    <TextView
        android:id="@+id/userName"
        android:layout_width="230dp"
        android:layout_height="50dp"
        android:fontFamily="@font/namu_pro"
        android:gravity="center_vertical"
        android:textColor="@color/darkerBlack"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@id/view1"
        app:layout_constraintEnd_toEndOf="@id/view1"
        app:layout_constraintStart_toStartOf="@id/view1"
        app:layout_constraintTop_toTopOf="@id/view1" />

    <TextView
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/norm_dp"
        android:fontFamily="@font/namu_pro"
        android:text="Город проживания"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@id/view1"
        app:layout_constraintTop_toBottomOf="@id/view1" />

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="@dimen/min_dp"
        android:layout_marginTop="@dimen/min_dp"
        android:background="@color/reWhite"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv2" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_marginStart="@dimen/min_dp"
        android:src="@drawable/ic_city"
        app:layout_constraintBottom_toBottomOf="@id/view2"
        app:layout_constraintStart_toStartOf="@id/view2"
        app:layout_constraintTop_toTopOf="@id/view2" />

    <TextView
        android:id="@+id/userCity"
        android:layout_width="230dp"
        android:layout_height="50dp"
        android:fontFamily="@font/namu_pro"
        android:gravity="center_vertical"
        android:textColor="@color/darkerBlack"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@id/view2"
        app:layout_constraintEnd_toEndOf="@id/view2"
        app:layout_constraintStart_toStartOf="@id/view1"
        app:layout_constraintTop_toTopOf="@id/view2" />

    <TextView
        android:id="@+id/tv4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/norm_dp"
        android:fontFamily="@font/namu_pro"
        android:text="Номер телефона"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@id/view3"
        app:layout_constraintTop_toBottomOf="@id/view3" />


    <View
        android:id="@+id/view4"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="@dimen/min_dp"
        android:layout_marginTop="@dimen/min_dp"
        android:background="@color/reWhite"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv4" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_marginStart="@dimen/min_dp"
        android:src="@drawable/ic_baseline_local_phone_24"
        app:layout_constraintBottom_toBottomOf="@id/view4"
        app:layout_constraintStart_toStartOf="@id/view4"
        app:layout_constraintTop_toTopOf="@id/view4" />

    <TextView
        android:id="@+id/userNumber"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:fontFamily="@font/namu_pro"
        android:gravity="center_vertical"
        android:textColor="@color/darkerBlack"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@id/view4"
        app:layout_constraintEnd_toEndOf="@id/view4"
        app:layout_constraintStart_toStartOf="@id/userCity"
        app:layout_constraintTop_toTopOf="@id/view4" />

    <TextView
        android:id="@+id/tv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/norm_dp"
        android:fontFamily="@font/namu_pro"
        android:text="Эл. ящик пользователя"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@id/view2"
        app:layout_constraintTop_toBottomOf="@id/view2" />


    <View
        android:id="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="@dimen/min_dp"
        android:layout_marginTop="@dimen/min_dp"
        android:background="@color/reWhite"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv3" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_marginStart="@dimen/min_dp"
        android:src="@drawable/ic_email"
        app:layout_constraintBottom_toBottomOf="@id/view3"
        app:layout_constraintStart_toStartOf="@id/view3"
        app:layout_constraintTop_toTopOf="@id/view3" />

    <TextView
        android:id="@+id/userGmail"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:fontFamily="@font/namu_pro"
        android:gravity="center_vertical"
        android:textColor="@color/darkerBlack"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@id/view3"
        app:layout_constraintEnd_toEndOf="@id/view3"
        app:layout_constraintStart_toStartOf="@id/userCity"
        app:layout_constraintTop_toTopOf="@id/view3" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/logOut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="8dp"
        android:backgroundTint="@color/green_btn"
        android:fontFamily="@font/namu_pro"
        android:text="Выйти"
        app:cornerRadius="@dimen/min_dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#83000000"
        android:visibility="gone" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="@style/progressBarWhite"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/container"
        app:layout_constraintEnd_toEndOf="@id/container"
        app:layout_constraintStart_toStartOf="@id/container"
        app:layout_constraintTop_toTopOf="@id/container" />

</androidx.constraintlayout.widget.ConstraintLayout>